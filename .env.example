# Hedge Control Frontend - Environment Variables

# API Base URL
VITE_API_BASE_URL=http://localhost:8000

# Optional debug switch (used by the API client)
VITE_API_DEBUG=false

# Power BI Cashflow (embed)
#
# Provide the Power BI report embed URL (iframe src).
# Notes:
# - Use the "Embed report" / "Secure embed" URL for authenticated org reports.
# - "Publish to web" works without auth but is NOT recommended for sensitive data.
VITE_POWERBI_CASHFLOW_EMBED_URL=

# Optional: URL filter templates applied based on the selected scope.
# Tokens: {dealId}, {contractId}
#
# Examples (adjust table/column names to match your report model):
# VITE_POWERBI_CASHFLOW_FILTER_DEAL_TEMPLATE=Deals/DealId eq {dealId}
# VITE_POWERBI_CASHFLOW_FILTER_CONTRACT_TEMPLATE=Contracts/ContractId eq {contractId}
VITE_POWERBI_CASHFLOW_FILTER_DEAL_TEMPLATE=
VITE_POWERBI_CASHFLOW_FILTER_CONTRACT_TEMPLATE=

# Feature flags
VITE_ENABLE_COUNTERPARTY_KYC=false

# Dev-only helpers (only active when import.meta.env.DEV)
VITE_AUTO_LOGIN_DEV=false
